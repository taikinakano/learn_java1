package chapter3;

public class chapter3_1 {
	public static void main(String[] args) {
		int weight = 60;
		if (weight == 60) {
			System.out.println("true");
		} else if (weight != 60) {
			System.out.println("false");
		}
		int arge1 = 3;
		int arge2 = 40;
		int arge = arge1 + arge2;
		int arges = arge * 2;
		if (arges > 60) {
			System.out.println(arges + "は６０を越えている");
		}else if (arges <= 60) {
			System.out.println(arges + "は６０よりも小さい");
		}
		int age = 1;
		if (age % 2 == 0) {
			System.out.println("偶数である");
		}else if (age % 2 != 0) {
			System.out.println("奇数である");
		}
	}
}
